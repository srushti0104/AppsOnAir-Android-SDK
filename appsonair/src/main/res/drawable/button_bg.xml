<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2E2E2E"/> <!-- Background color when pressed -->
            <corners android:radius="8dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#2196F3" /> <!-- Button background color -->
            <corners android:radius="8dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>
</selector>